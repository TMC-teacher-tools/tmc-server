<h1>Editing organization</h1>

<%= form_for(@organization) do |f| %>
  <%= render 'shared/error_messages', target: @organization %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>
  <div class="field">
    <%= f.label :information %>
    <%= f.text_area :information %><br>
  </div>
  <div class="field">
    <%= f.label 'change logo' %>
    <%= f.file_field :logo%>
  </div>
  <br>
  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>