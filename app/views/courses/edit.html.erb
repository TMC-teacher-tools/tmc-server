<h1>Edit course</h1>

<%= form_for(@course, url: organization_course_path) do |f| %>
  <%= render 'shared/error_messages', target: @course %>

  <%= labeled_field("Course title*", f.text_field(:title)) %>
  <%= labeled_field("Course description", f.text_area(:description)) %>
  <%= labeled_field("Material URL", f.text_field(:material_url)) %>
  <%= labeled_field("Course name", f.text_field(:name, disabled: true)) %>
  <p>Fields with (*) are required</p>
  <div class="actions">
    <%= f.submit 'Update Course', class: "btn btn-primary"%>
  </div>
<% end %>
